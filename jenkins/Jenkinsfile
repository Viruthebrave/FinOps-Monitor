pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "finops-monitor"
        DOCKER_USER = "patilvirupakshi"  // your DockerHub username
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo 'üì• Fetching source code from GitHub...'
                git branch: 'main', url: 'https://github.com/Viruthebrave/FinOps-Monitor.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'üê≥ Building Docker image...'
                sh 'docker build -t $DOCKER_USER/$DOCKER_IMAGE:latest ./app'
            }
        }

        stage('Login to DockerHub') {
            steps {
                echo 'üîë Logging into DockerHub...'
                withCredentials([usernamePassword(credentialsId: 'dockerhub-pass', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                }
            }
        }

        stage('Push Docker Image to DockerHub') {
            steps {
                echo 'üöÄ Pushing image to DockerHub...'
                sh 'docker push $DOCKER_USER/$DOCKER_IMAGE:latest'
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo '‚öôÔ∏è Deploying to Kubernetes...'
                sh '''
                kubectl apply -f k8s/deployment.yaml
                kubectl apply -f k8s/service.yaml
                '''
            }
        }
    }

    post {
        success {
            echo '‚úÖ Build and deployment successful! Image pushed to DockerHub.'
        }
        failure {
            echo '‚ùå Build failed. Please check the console output for details.'
        }
    }
}
